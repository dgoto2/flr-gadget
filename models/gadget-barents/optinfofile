seed 12345 ; seed the random number generator with n
;
; options for the Simulated Annealing optimisation
;
[simann]
simanniter 50000000  ; number of simulated annealing iterations (default 2000)
;scale	  1 
simanneps  1e-02 ; minimum epsilon, simann halt criteria (default 1e-04) ----> raise this back to e-4
t          100000   ; simulated annealing initial temperature
rt         0.97  ; temperature reduction factor (default 0.85)
nt         2     ; number of loops before temperature adjusted (default 2)
ns         5     ; number of loops before step length adjusted (default 5)
vm         1     ; step length for simulated annealing (default 1)
cstep      2     ; step length adjustment factor (default 2)
lratio     0.3   ; lower limit for the ratio adjustment (default 0.3)
uratio     0.7   ; upper limit for the ratio adjustment (default 0.7)
check      4     ; number of fstar values to check (default 4)
;
; options for the Hooke & Jeeves optimisation
;
[hooke]
hookeiter  10000000 ; number of hooke & jeeves iterations (default 1000)
hookeeps   1e-10 ; minimum epsilon, hooke halt criteria (default 1e-04) -- changed from the default?
rho        0.7   ; initial value for the resizing multiplier (default 0.5)
lambda     1     ; initial value for the step length (default 0)
;
; options for the BFGS optimisation
;
[bfgs]
bfgsiter   10000000 ; number of bfgs iterations
bfgseps    0.01  ; minimum epsilon, bfgs halt criteria
sigma      0.01  ; armijo convergence criteria
beta 	   0.3   ; armijo adjustment factor
gradacc    1e-05 ; initial value for gradient accuracy
gradstep   0.5   ; gradient accuracy adjustment factor
gradeps    1e-06 ; minimum value for gradient accuracy
